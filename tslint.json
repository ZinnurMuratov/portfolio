{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true
    ],
    "interface-name": [
      false
    ],
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "no-console": [
      "error",
      "warn",
      "info"
    ],
    "max-classes-per-file": [true, 5, "exclude-class-expressions"]
  },
  "rulesDirectory": [],
  "exclude": [
    "node_modules"
  ]
}